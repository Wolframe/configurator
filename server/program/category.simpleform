FORM CategoryFeature
{
	id @int
	name string
	minQuantity int
	maxQuantity int
}

FORM Category
{
	category
	{
		id ?@int
		parentID @int
		root ?string
		name string
		description string
		pictures
		{
			picture []
			{
				id @int
			}
		}
		features_required
		{
			CategoryFeature []
			{
				_ CategoryFeature
			}
		}
		features_provided
		{
			CategoryFeature []
			{
				_ CategoryFeature
			}
		}
	}
}

FORM createCategory
{
	_ Category
}

FORM updateCategory
{
	_ Category
}

FORM CategoryHierarchyNode
{
	id @int
	parentID @int
	name string
	item CategoryHierarchyNode[]
}

FORM CategoryHierarchy
{
	tree
	{
		item CategoryHierarchyNode[]
	}
}

FORM BaseCategoryRequest
{
	category
	{
		id @int
	}
}

FORM deleteCategory
{
	_ BaseCategoryRequest
}

FORM CategoryPictureListRequest
{
	_ BaseCategoryRequest
}

FORM CategoryFeatureListRequest
{
	features
	{
		feature []
		{
			id @int
			minQuantity int
			maxQuantity int
		}
		add []
		{
			id @int
			minQuantity int
			maxQuantity int
		}
		remove []
		{
			id @int
		}
	}
}

FORM CategoryFeatureEdit
{
	feature
	{
		_ CategoryFeature
	}
}

FORM CategoryFeatureList
{
	CategoryFeatures
	{
		CategoryFeature []
		{
			_ CategoryFeature
		}
	}
}
