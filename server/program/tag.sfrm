STRUCT TagContent
{
	parentID @int
	name string
	description ?string
}


FORM TagNew
{
	Tag
	{
		_ TagContent
	}
}


FORM TagDef
{
	Tag
	{
		id @int
		_ TagContent
	}
}


FORM TagRef
{
	tag
	{
		id @int
	}
}


FORM TagHierarchyNode
{
	_ TagContent
	item ^TagHierarchyNode[]
}


FORM TagHierarchy
{
	tree
	{
		item ^TagHierarchyNode[]
	}
}


FORM TagSetRequest
{
	tags
	{
		tag TagRef[]
		add TagRef[]
	}
}


FORM TagList
{
	tags
	{
		tag TagDef[]
	}
}

