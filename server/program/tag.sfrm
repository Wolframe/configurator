STRUCT TagContent
{
	name string
	description ?string
}


FORM TagNew
{
	tag
	{
		parentID @int
		_ TagContent
	}
}


FORM TagDef
{
	tag
	{
		id @int
		_ TagContent
	}
}


FORM TagRef
{
	tag
	{
		id @int
	}
}


STRUCT TagHierarchyNode
{
	_ TagContent
	item ^TagHierarchyNode[]
}


FORM TagHierarchy
{
	tree
	{
		item TagHierarchyNode[]
	}
}


FORM TagList
{
	tags
	{
		tag[]
		{
			id @int
			_ TagContent
		}
	}
}

